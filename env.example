# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/voice_task_manager
POSTGRES_DB=voice_task_manager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Voice Processing
VOICE_RECOGNITION_LANGUAGE=en-US
VOICE_PROCESSING_TIMEOUT=30
VOICE_MAX_FILE_SIZE=10485760  # 10MB

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
UPLOAD_MAX_FILE_SIZE=10485760  # 10MB

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@voicetaskmanager.com
EMAIL_FROM_NAME=Voice Task Manager

# Security
SECRET_KEY=your-super-secret-key-here
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000"]
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Development
DEBUG=true
RELOAD=true

# Production
PRODUCTION=false
SSL_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# Docker
DOCKER_IMAGE_NAME=voice-task-manager
DOCKER_IMAGE_TAG=latest

# Deployment
VERCEL_PROJECT_ID=your-vercel-project-id
RENDER_SERVICE_ID=your-render-service-id
